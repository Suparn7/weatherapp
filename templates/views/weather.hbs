<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    {{>navbar}}

    <div class = "container-fluid main_header">
        <!--grid bnarhe-->
        <div class = "row">
            <div class = "col-md-10 col-12 mx-auto"> <!--yahan pura hai, dono side 1 1 hhor k, aage pure ko do part mein baatenge-->
                
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id = "cityName" placeholder="Enter Your City Name" autocomplete="off">
                        <input type="submit" value="search" id = "submitBtn">
                    </form>
                </div>
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_data">13 OCT</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

     {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const day = document.getElementById('day');

        const getCurrentDay = () =>{
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesdayss";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            days = weekday[currentTime.getDay()];

            day.innerText = days;
        };
        getCurrentDay();
    </script>
</body>
</html>